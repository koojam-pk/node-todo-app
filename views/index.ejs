<% include ../views/partials/header %>
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/todo/add">
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="text" placeholder="Add name" class="form-control">
            </div>
            <div class="form-group">
                <label>Body</label>
                <textarea name="body" placeholder="Add body" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
        </form>
    </div>
    <div class="col-md-6">
        <ul class="list-group">
            <% if (typeof todos != "undefined") { %>
                <% todos.forEach(todo => { %>    
                    <li class="list-group-item d-flex align-items-center">
                        <span class="w-100"><%= todo.text %> - <%= todo.body %></span>
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-default" href="/todo/edit/<%= todo._id %>">Edit</a>
                            <a data-id="<%= todo._id %>" class="btn btn-danger delete-todo mr-1" href="#">Delete</a>
                        </div>
                    </li>
                <% }) %>
            <% } %>
        </ul>
    </div>
</div>


<% include ../views/partials/footer %>