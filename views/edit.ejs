<% include ../views/partials/header %>
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/todo/edit/<%= todo._id %>">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" name="text" placeholder="Add name" value="<%= todo.text %>">
            </div>
            <div class="form-group">
                <label>Body</label>
                <textarea class="form-control" name="body" placeholder="Add body"><%= todo.body %></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Update</button>
            <a class="btn btn-danger" href="/">Cancel</a>
        </form>
    </div>
</div>
<% include ../views/partials/footer %>